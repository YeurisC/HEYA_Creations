{% extends "layouts/app.njk" %}

{% block title %}
    Inicio
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="">
{% endblock %}

{% block content %}
<main>
    <!-- Banner principal -->
    <div class="banner_principal">
        <!-- Aquí irá la imagen del banner -->
    </div>

    <!-- Buscador -->
    <div class="buscador">
        <input type="text" placeholder="Busca entre nuestros productos...">
        <button type="submit">Buscar</button>
    </div>

    <!-- Filtro de productos -->
    <div class="filtro">
        <h3>Categorías</h3>

        <form action="/filtrar" method="GET">
            <!-- Categorías -->
            <label><input type="checkbox" name="categoria" value="eventos"> Eventos</label><br>
            <label><input type="checkbox" name="categoria" value="flores"> Flores</label><br>
            <label><input type="checkbox" name="categoria" value="bandejas"> Bandejas</label><br>
            <label><input type="checkbox" name="categoria" value="otros"> Otros</label><br><br>

            <!-- Rango de precios -->
            <label>Min</label>
            <input type="number" name="min" placeholder="0" style="width: 50px;">
            <label>Max</label>
            <input type="number" name="max" placeholder="999" style="width: 50px;">
            <br><br>

            <!-- Botón de aplicación -->
            <button type="submit">Aplicar</button>
        </form>
    </div>

    <!-- Contenedor de producto -->
    <div class="contenedor_producto">
        <div class="img_producto"></div>
        <h5>$00.00</h5>

        <!-- Botón de carrito -->
        <a href="#">
            <div class="boton carrito"></div>
        </a>

        <!-- Botón de favoritos -->
        <a href="#">
            <div class="boton favoritos"></div>
        </a>

        <!-- Título del producto -->
        <h2>Arreglo de Rosas</h2>
    </div>
</main>
{% endblock %}

{% block scripts %}
    <script src=""></script>
{% endblock %}
