
{% extends "layouts/app.njk" %}\
{% block title %}
    Gestion Clientes
{% endblock %}
{% block styles %}
{% endblock %}
{% block content %}

    <header>
        <h1>HEYA CREATIONS</h1>
    </header>

    <main>
        <section>
            <h2>¡Regístrate!</h2>
            
            <form action="#" method="POST">
                
                <div>
                    <label for="full_name">Nombres & Apellidos</label>
                    <input type="text" id="full_name" placeholder="Nombres & Apellidos" name="full_name" required>
                </div>

                <div>
                    <label for="email">Correo Electronico</label>
                    <input type="email" id="email" placeholder="Correo Electronico" name="email" required>
                </div>

                <div>
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" placeholder="Contraseña" name="password" required>
                </div>

                <div>
                    <label for="confirm_password">Confirmar Contraseña</label>
                    <input type="password" id="confirm_password" placeholder="Confirmar Contraseña" name="confirm_password" required>
                </div>

                <button type="submit">Registrarse</button>
            </form>

            <p>¿Ya tienes cuenta? <a href="#">Inicia sesion</a></p>
        </section>
    </main>
{% endblock %}