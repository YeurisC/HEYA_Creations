{% extends "layouts/app.njk" %}

{% block title %}
    Home
{% endblock %}

{% block styles %}
    <!-- Enlace al CSS para la página de inicio -->
    <link rel="stylesheet" href="/css/home.css">
{% endblock %}

{% block content %}

<!-- Contenedor principal -->
<div class="home-container">

    <!-- Sección de Flores -->
    <section class="section-flores">
        <h2>Flores</h2>
        <div class="product-grid">
            <div class="product-card">
                <img src="/img/arreglo-floral-1.png" alt="Arreglo floral">
                <p>Arreglo Floral Primavera</p>
                <p>$150.00</p>
            </div>
        </div>
    </section>

    <!-- Sección: Bandejas -->
    <section class="section-bandejas">
        <h2>Bandejas</h2>
        <div class="product-grid">
            <div class="product-card">
                <img src="/img/bandeja-clasica.png" alt="Bandeja de desayuno clásica">
                <p>Bandeja Clásica</p>
                <p>$120.00</p>
            </div>
        </div>
    </section>

    <!-- Sección: Eventos -->
    <section class="section-eventos">
        <h2>Eventos</h2>
        <div class="product-grid">
            <div class="product-card">
                <img src="/img/evento-corporativo.png" alt="Decoración para evento corporativo">
                <p>Evento Corporativo</p>
                <p>$300.00</p>
            </div>
        </div>
    </section>

</div>

{% endblock %}
